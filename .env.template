# üåê .env.template
# ==========================================================
# Template of all environment variables used across:
# - Supabase (database + functions)
# - Speechwriter (Next.js app)
# - MicroFactory automation (CLI / local dev)
#
# Copy this file to `.env.local` for local development.
# ==========================================================

# --- üîë Supabase Keys ---
# URL of your Supabase project (from dashboard)
VITE_SUPABASE_URL="https://your-project-id.supabase.co"

# Public anon key (safe for client use)
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"

# Secret service role key (‚ö†Ô∏è never commit this)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Optional: Supabase Project Reference (for CLI)
SUPABASE_PROJECT_REF="your-project-ref"

# --- üß† OpenAI / Model Providers ---
# Your OpenAI API key (used for LLM generation)
OPENAI_API_KEY="your-openai-api-key"

# Optional: support future providers (Anthropic, Gemini, etc.)
ANTHROPIC_API_KEY=""
GOOGLE_GENAI_API_KEY=""

# --- üîä Speech & Audio ---
# ElevenLabs (or other TTS provider) API key
ELEVENLABS_API_KEY=""

# Default voice IDs (customisable in Admin UI)
DEFAULT_FEMALE_VOICE_ID="u31pm8k90npGqBi9jinX"
DEFAULT_MALE_VOICE_ID="utKiB46Ra2Ti2q1dGfLE"

# --- üß© Admin Configuration ---
# Comma-separated list of admin emails
ADMIN_EMAILS="stephen@example.com"

# --- üß± Build / Environment ---
# Next.js environment
NODE_ENV="development"

# The app base URL (used for redirects, OAuth, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Enable/disable telemetry (optional)
NEXT_TELEMETRY_DISABLED=1

# --- üì¶ Feature Flags (future use) ---
FEATURE_PROMPT_EDITOR="true"
FEATURE_MULTIMODEL_SUPPORT="true"

# --- üß™ Testing / Local CLI ---
# When running Supabase CLI locally:
SUPABASE_DB_PASSWORD="postgres"
SUPABASE_DB_PORT="54322"
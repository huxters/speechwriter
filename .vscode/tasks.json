{
  // Simplified task configuration for Cursor Dev Container
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Web",
      "type": "shell",
      "command": "pnpm start:web",
      "detail": "Launches the Speechwriter web app inside the Dev Container.",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Stop Server",
      "type": "shell",
      "command": "pnpm stop",
      "detail": "Stops the running Next.js development server.",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm lint",
      "detail": "Runs ESLint checks across all workspace packages.",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test"
    },
    {
      "label": "Typecheck",
      "type": "shell",
      "command": "pnpm typecheck",
      "detail": "Runs TypeScript type checking for all workspace packages.",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test"
    }
  ]
}
